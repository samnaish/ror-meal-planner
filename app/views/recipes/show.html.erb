<div class="app-container">
  <main class="content">
    <%= render 'nav/navblock' %>
    <p id="notice"><%= notice %></p>
    <p>
      <strong>Name:</strong>
      <%= @recipe.name %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @recipe.description %>
    </p>

    <h3>Steps</h3>
    <ol>
      <% for @step in @recipe.steps %>
        <li><%= @step.direction %></li>
      <% end %>
    </ol>

    <h3>Ingredients</h3>
    <ul>
      <% for @ingredient in @recipe.ingredients %>
        <li><%="#{@ingredient.quantity}#{@ingredient.unit} #{@ingredient.content}"%></li>
      <% end %>
    </ul>
    <%= link_to 'Back', recipes_path %>
    <%= render 'footer/label' %>
  </main>
</div>
