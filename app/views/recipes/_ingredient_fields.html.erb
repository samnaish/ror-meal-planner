<div class="nested-fields">
  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="field">
    <%= form.label "Unit", class: 'field__label'%>
    <%= form.select(:unit, options_for_select([["", ""], ["clove", "clove"], ["Grams", "Grams"], ["ML", "ML"], ["TSP", "TSP"]])) %>
  </div>
  <div class="field">
    <%= form.label "Quantity", class: 'field__label'%>
    <%= form.number_field(:quantity, min: 1) %>
  </div>
  <%= link_to_remove_association "Remove Ingredient", form, form_name: 'form' %>
</div>
