<div class="app-container">
  <main class="content">
  <%= render 'nav/navblock' %>
  <div class="login-page">
    <div class="login__form-outline">
      <h2 class="heading">Log in</h2>
      <div class="login-form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="login__field">
          <%= f.label :login %><br />
          <%= f.text_field :login, autofocus: true, class:"field__input"%>
        </div>

          <div class="login__field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password", class:"field__input" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="login__field-checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>

  <%= render 'footer/label' %>
</main>
</div>
